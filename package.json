{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tailwind-to-css",
  "title": "Tailwind to CSS",
  "description": "Converts a list of tailiwnd utility classes to CSS rules",
  "icon": "command-icon.png",
  "author": "walter_kimaro",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "To CSS",
      "description": "Tailwind classes to CSS rules",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.2",
    "css": "^3.0.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/css": "^0.0.37",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
